							a(href='menu.html').btn.btn-primary.box-dishes__button explore menu



	// Gallery
	section.section.section-xl.bg-transparent
		.container
			.row.justify-content-center
				.col-6.col-xs-8
					.text-center
						h2.wow.fadeScale Gallery
					// Owl Carousel
					.owl-carousel.owl-visible(
						data-items='1',
						data-autoplay='true',
						data-owl!={
							margin: 80,
							loop: false,
							dots: false,
							nav: true,
							autoplayTimeout: 5000,
							smartSpeed: '1000'
						}, data-lightgallery
					)
						+thumbnail({
							imgOriginal: 'gallery-01-original',
							img: 'gallery-grid-01-690x480'
						})
						+thumbnail({
							imgOriginal: 'gallery-02-original',
							img: 'gallery-grid-02-690x480'
						})
						+thumbnail({
							imgOriginal: 'gallery-03-original',
							img: 'gallery-grid-03-690x480'
						})
						+thumbnail({
							imgOriginal: 'gallery-04-original',
							img: 'gallery-grid-04-690x480'
						})
						+thumbnail({
							imgOriginal: 'gallery-05-original',
							img: 'gallery-grid-05-690x480'
						})

	//Testimonials
	include ../sections/_testimonials

	//Our Blog
	section.section.section-xl.bg-default
		.container
			article.blog-layout
				.blog-layout-main
					h2.text-center.wow.fadeScale Our Blog
					.row.row-50.row-xxl-70.mt-5
						.col-md-4
							// Post Classic
							article.post-classic
								a.post-classic-media(href=links.post): +img('sidebar-blog-1-450x530')
								ul.post-classic-meta
									li: time(datetime='2021') March 2, 2021
								h5.post-classic-title: a(href=links.post) Easy Ground Beef Tacos
								.text-right.mt-4
									a(href='single-post.html').btn.btn-icon read more
								.divider

						.col-md-4
							// Post Classic
							article.post-classic
								a.post-classic-media(href=links.post): +img('sidebar-blog-2-450x530')
