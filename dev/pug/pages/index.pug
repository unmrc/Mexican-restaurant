extends ../_skeleton

block page
	include ../sections/_header-classic
	include ../components/counter
	include ../components/gallery-item
	include ../components/thumbnail


	//Swiper
	section.section.section-md
		.container
			.row
				.col-md-7.wow.fadeInLeft
					h1 best mexican dishes for you
				.col-md-4.offset-md-1.wow.fadeInRight
					p.mt-5 Mexico has long been among the worldâ€™s most popular holiday destinations, attracting sun seekers and food lovers alike. Discover even more foodie getaways, check our menu.
					a(href='menu.html').btn.btn-icon explore menu
				.col-12
					.header__bg-image(style='background-image: url(images/header-1-1410x855.jpg)')
						+img('header-2-803x742.png')
	//Counters
	section.section.section-md.text-center.wow.slideInDown
		.container
			.row.row-30.justify-content-center.bordered-1
				.col-12.col-md-3
					+counter({
						title: 'Happy clients',
						value: 10,
						postfix: 'k'
					})
				.col-12.col-md-3
					+counter({
						title: 'Years in service',
						value: 8,
						postfix: '+'
					})
				.col-12.col-md-3
					+counter({
						title: 'Awards',
						value: 5,
						postfix: '+'
					})


	//About Us
	section.section.section-testimonials.parallax-background.wow.fadeInRight(style='background-image: url(images/parallax-background.png); background-repeat: no-repeat; background-position: right 35%;')
		.container
			.col-12
				.col-lg-6
					h2 Great Cuisines. Incredible Experience.
					.col-lg-8.mt-4.pl-0
						p Mexican restaurant is a great opportunity to get acquainted with new tastes and get special gastronomic experiences.

						a(href='our-story.html').btn.btn-default-outline our story

				.parallax-scene-js.parallax-scene(data-scalar-x='5', data-scalar-y='10')
					.layer-01
						.layer(data-depth='0.45')
							+img('parallax-scene-01-100x125.png')

					.layer-02
						.layer(data-depth='.65')
							+img('parallax-scene-02-55x60.png')

					.layer-03
						.layer(data-depth='0.3'): +img('parallax-scene-03-131x157.png')

					.layer-04
						.layer(data-depth='0.55')
							+img('parallax-scene-04-248x132.png')

			.divider.divider-xxl

			.row.text-center.justify-content-around
				.col-lg-4.about-us__card
					p This cozy restaurant has left the best impressions! Hospitable hosts, delicious dishes, beautiful presentation, wide wine list and wonderful dessert.
					+img('partner-1-130x30.png')
				.col-lg-4.about-us__card
					p Excellent food. Menu is extensive and seasonal to a particularly high standard. Definitely fine dining. I gladly recommend it to every fan of Mexican cuisine!
					+img('partner-2-200x30.png')
				.col-lg-4.about-us__card
					p This place is great! Atmosphere is chill and cool but the staff is also really friendly. The food is always fantastic and I am always delighted with my meal!
					+img('partner-3-120x35.png')


